{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "resources"],
    
    "compilerOptions": {
      "types": [
        "node",
      ],
      "skipLibCheck": true,
      "lib": ["es5", "es6", "esnext", "dom"],
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "bundler",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": false,
      "sourceMap": false,
      "outDir": "./dist",
      "baseUrl": "./",
      "rootDir": "./src"

    }
  }
<% // Password Reset Email Template // Uses the base transactional template structure const
    baseTemplatePath='../base/transactional.ejs' ; %>
    <%- include(baseTemplatePath, { title: data.title || 'Reset Your Password' ,
        preheader: 'Follow the instructions to reset your password' , greeting: data.greeting || `Hi ${data.userName
        || 'there' },`, body: ` <p>We received a request to reset the password for your account.</p>
        <p>If you didn't make this request, you can safely ignore this email. Your password will remain unchanged.</p>
        <p>This link will expire in ${data.expiresIn || '1 hour'}.</p>
        `,
        buttonText: 'Reset Password',
        buttonUrl: data.resetUrl,
        footer: 'If you\'re having trouble clicking the button, copy and paste this URL into your browser: ' +
        data.resetUrl,
        config: config
        }) %>